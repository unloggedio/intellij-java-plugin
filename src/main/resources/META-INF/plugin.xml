<idea-plugin>
    <id>org.videobug.videobug</id>
    <name>Videobug</name>
    <vendor email="support@bug.video" url="https://www.bug.video">Videobug</vendor>

    <description>
        <![CDATA[
        Videobug records code execution in production so that developers can watch it line by line as frequently as they want, just like a video.
        <br/>
        It takes away the pain of recreating exact conditions that led to a bug and saves ~3 hours of developer time every day.
        <br/>

        Developers can deploy Videobug server on their premise, download our Java agent and run their java code on localhost, staging or production.
        <br/>
        Whenever a bug happens, they can check this plugin, go back in time, see a line-by-line code execution & fix the bug in minutes.
      ]]>
    </description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.xdebugger</depends>
    <depends>com.intellij.modules.java</depends>

    <actions>
        <!-- Add your actions here -->


        <action icon="AllIcons.Actions.Back" text="Step Back" id="Debugger.ReverseResume"
                class="actions.JumpBack">
            <add-to-group relative-to-action="StepOver" group-id="XDebugger.ToolWindow.TopToolbar" anchor="before"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt R" second-keystroke="F9"/>
        </action>

        <group id="Demo.FetchSession" text="Fetch Session" description="You need to first fetch a session">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <action icon="/icons/videobug_Icon_16x16.svg" class="actions.PopupDialogAction"
                    description="Test Description" id="fetchSession" text="Fetch Session"/>
        </group>


        <group id="Demo.BackStatement" text="Go back in time using this" description="Jump backwards using this button">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <action class="actions.JumpBack" description="Test Description" id="jumpBack" text="Jump Back"
                    icon="AllIcons.Actions.Back"/>
        </group>

        <group id="Demo.NextStatement" text="Go Forward in time using this"
               description="Jump forward using this button">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <action class="actions.JumpForward" description="Test Description" id="jumpForward" text="Jump Forward"
                    icon="AllIcons.Debugger.NextStatement"/>
        </group>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="VideoBug" secondary="false" icon="/icons/videobug_Icon_16x16.svg" anchor="bottom"
                    factoryClass="factory.DebuggerFactory"/>

        <projectService serviceImplementation="factory.ProjectService"/>
        <programRunner implementation="extension.InsidiousProgramRunner"/>
        <configurationType implementation="extension.InsidiousRunConfigType"/>
        <executor implementation="extension.InsidiousExecutor"/>
    </extensions>

</idea-plugin>