<idea-plugin>
    <id>org.videobug.videobug</id>
    <name>Video Bug</name>
    <vendor email="support@videobug.com" url="https://www.videobug.com">Video Bug</vendor>

<!--    <description></description>-->

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.xdebugger</depends>


    <actions>
        <!-- Add your actions here -->

        <group id="Demo.FetchSession" text="Fetch Session" description="You need to first fetch a session">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <action icon="/icons/videobug_Icon_16x16.svg" class="actions.PopupDialogAction" description="Test Description" id="fetchSession" text="Fetch Session"/>
        </group>

<!--        <group id="Demo.GetDebugPoints" text="Select your debug points" description="You need to select your debug points first">-->
<!--            <add-to-group group-id="MainToolBar" anchor="last"/>-->
<!--            <action class="actions.SearchAction" description="Test Description" id="fetchDebugpoints" text="Fetch Debug Points" icon="AllIcons.Debugger.ThreadRunning"/>-->
<!--        </group>-->

        <group id="Demo.BackStatement" text="Go back in time using this" description="Jump backwards using this button">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <action class="actions.JumpBack" description="Test Description" id="jumpBack" text="Jump Back" icon="AllIcons.Actions.Back"/>
        </group>

        <group id="Demo.NextStatement" text="Go Forward in time using this" description="Jump forward using this button">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <action class="actions.JumpForward" description="Test Description" id="jumpForward" text="Jump Forward" icon="AllIcons.Debugger.NextStatement"/>
        </group>

<!--        <group id="Demo.DropDown" text="Select Thread Id here" description="Select Thread Id here">-->
<!--            <add-to-group group-id="MainToolBar" anchor="last"/>-->
<!--            <action class="actions.MyComboBox" description="Test Description" id="searchThread" text="Search Thread" icon="AllIcons.Actions.SearchWithHistory"/>-->
<!--        </group>-->

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="VideoBug" secondary="false" icon="/icons/videobug_Icon_16x16.svg" anchor="bottom"
                    factoryClass="factory.DebuggerFactory"/>
    </extensions>

</idea-plugin>